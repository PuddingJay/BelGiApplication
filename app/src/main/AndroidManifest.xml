<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.belgiclassroom">

    <application
        android:name=".BelgiApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BelgiClassroom">
        <activity
            android:name=".TAMPILAN.ActivityUtama"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.BelgiClassroom.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".TAMPILAN.ActivityTambahKelas"
            android:exported="true"
            android:label="Tambah Kelas"
            android:theme="@style/Theme.BelgiClassroom.NoActionBar"/>

        <activity
            android:name=".TAMPILAN.ActivityKelas"
            android:exported="true"
            android:label="Kelas"
            android:theme="@style/Theme.BelgiClassroom.NoActionBar"/>

        <activity
            android:name=".TAMPILAN.ActivityTambahTugas"
            android:exported="true"
            android:label="Tambah Tugas"
            android:theme="@style/Theme.BelgiClassroom.NoActionBar"/>
    </application>

</manifest>